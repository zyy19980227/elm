body,html
    line-height 1
    font-weight 200

bg-image($url)
    background-image url($url+"@2x.png")
    @media (-webkit-min-device-pixel-ratio:3),(min-device-pixel-ratio:3)
        background-image url($url+"@3x.png")

.clearfix
    display inline-block
    &:after
        display block
        content "."
        height 0
        line-height 0
        clear both
        visibility hidden